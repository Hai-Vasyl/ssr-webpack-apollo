  "scripts": {
    "======= BUILD =======": "",
    "build:dev": "cross-env NODE_ENV=development webpack --mode development --config webpack.dev.js",
    "build:prod": "cross-env NODE_ENV=production webpack --mode production --config webpack.prod.js",
    "======= WATCH =======": "",
    "watch": "cross-env NODE_ENV=development webpack --mode development --config webpack.dev.js --watch",
    "======= START =======": "",
    "start:server:api": "nodemon ./dist/server/server.api.js",
    "start:server:main": "nodemon ./dist/server/server.main.js",
    "start:servers": "concurrently \"yarn start:server:api\" \"yarn start:server:main\"",
    "start:prod": "concurrently \"yarn build:prod\" \"yarn start:servers\"",
    "start": "concurrently \"yarn watch\" \"yarn start:servers\""
  },
